<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - TP4Bis </title>
        <link rel="stylesheet" href="~/css/site.css"/>
    </head>
    <body>
        <header style="position:fixed; top: 0; margin: 20px 0px 20px 0px;">
            <h1>TP 4Bis - Pagina Paises</h1>
        </header>
        <div style="padding:30px 10px 0px 10px;">
            @RenderBody()
        </div>
        <footer>
                &copy; @DateTime.Now.Year - Taller de Programación 
        </footer>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
